<% include partials/_header %>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <a href="/" class="navbar-brand">CRUD NodeMongo</a>
    </nav>

    <div class="container">

        <div class="row">
            <!--form-->
            <div class="col-md-5">
              <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Insert a title" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control" placeholder="Insert a description" ></textarea>

                        </div>
                        <button type="submit" class="btn btn-primary btn-block">agregar</button>
                    </form>
                </div>
              </div>
            </div>

            <!-- -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead><tr>
                        <th>NÂ°</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Operacion</th>
                    </tr></thead>
                    <tbody>
                        <% for(var i = 0; i < task.length; i++) { %>
                            <tr> 
                                <td> <%= i + 1 %></td>
                                <td><%= task[i].title %></td>
                                <td><%= task[i].description %></td>
                                <td>
                                 
                                 <a href="/turn/<%= task[i]._id %>" 
                                    class="btn <%=task[i].status ? 'btn-success' : 'btn-dark'%>">
                                    
                                    Done</a> 
                                 <a href="/delete/<%= task[i]._id %>" class="btn btn-danger">Delete</a>   
                                 <a href="/edit/<%= task[i]._id %>" class="btn btn-info">Edit</a>     

                                </td>
                                
                        
                        </tr>

                         <% } %>

                    </tbody>

                </table>
            </div>


        </div>
    </div>

    <% include partials/_footer %>